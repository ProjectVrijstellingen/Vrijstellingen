@model IEnumerable<VTP2015.ViewModels.Docent.AanvraagListViewModel>

<div class="panel panel-success clearfix inheritWidth aanvraagcontainer">
    <div class="panel-heading ">
        <h3 class="panel-title">Requests <span id="vorigeAanvraag"><<</span><span id="huidigeAanvraag">1</span>/<span id="aantalAanvragen"></span><span id="volgendeAanvraag">>></span></h3>
    </div>
    <div class="panel-body">
        @{ var getoondeAanvraagId = 1; }
        @foreach (var aanvraag in Model)
        {
            <div id="aanvraag-@getoondeAanvraagId" class="aanvraag hide" data-studentid="@aanvraag.StudentId" data-Requestid="@aanvraag.AanvraagId">

                <p>@aanvraag.ModuleName - @aanvraag.PartimName</p>
                <label for="argumentatie" class="control-label">Argumentation:</label>
                <textarea id="argumentatie" class="form-control" readonly="">@aanvraag.Argumentatie</textarea>
                <label class="control-label">Evidence: <a href="#" class="vorigBewijs"><<</a><span class="huidigBewijs">1</span>/@aanvraag.Bewijzen.Count()<a href="#" class="volgendBewijs">>></a></label>
                @foreach (var bewijs in aanvraag.Bewijzen)
                {
                    <div data-bewijsid="@bewijs.BewijsId" class="inheritWidth bewijs hide">
                        <div class="inheritWidth bewijspointer" data-Requestid="Request_@Request.RequestId">
                            <textarea id="argumentatie" class="form-control" readonly="">@bewijs.Omschrijving</textarea>
                            <a href="~/bewijzen/@bewijs.StudentEmail.Split(new Char[] {'@'}).First()/@bewijs.Path" download>
                                Als onderstaande voorstelling niet werkt kunt u op deze link klikken om het bewijs te downloaden
                            </a>
                            <div class="bewijsdiv">
                                @if (@bewijs.Path.Split(new Char[] { '.' }).Last().Equals("pdf"))
                                {
                                    <embed src="~/bewijzen/@bewijs.StudentEmail.Split(new Char[] {'@'}).First()/@bewijs.Path" class="inheritWidth" />
                                }
                                else
                                {
                                    <img src="~/bewijzen/@bewijs.StudentEmail.Split(new Char[] {'@'}).First()/@bewijs.Path" class="inheritWidth" />
                                }
                            </div>

                        </div>

                    </div>
                                { getoondeAanvraagId++; }
                }
                <div class="opinionButtons row">
                    <input type="button" class="btn btn-success approveButton" value="Accepteren">
                    <input type="button" class="btn btn-danger dissapproveButton" value="Weigeren">
                </div>

            </div>
        }
    </div>
</div>