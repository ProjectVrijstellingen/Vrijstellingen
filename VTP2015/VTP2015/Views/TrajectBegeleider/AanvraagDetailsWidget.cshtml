@using VTP2015.Entities
@using VTP2015.ViewModels.TrajectBegeleider
@model IEnumerable<AanvraagDetailsViewModel>

<div class="panel panel-success clearfix inheritWidth">
    <div class="panel-heading ">
        <h3 class="panel-title">Aanvragen <span id="vorigeAanvraag"><<</span><span id="huidigeAanvraag">1</span>/<span id="aantalAanvragen"></span><span id="volgendeAanvraag">>></span></h3>
    </div>
    <div class="panel-body">
        @{ var getoondeAanvraagId = 1; }
        @foreach (var aanvraag in Model)
        {
            <div id="aanvraag-@getoondeAanvraagId" class="aanvraag hide" data-dossierid="@aanvraag.DossierId" data-aanvraagid="@aanvraag.AanvraagId">
                <button class="btn btn-danger herinnering">Poke docent</button>
                <p>@aanvraag.PartimInformatie.Module.Naam - @aanvraag.PartimInformatie.Partim.Naam</p>
                <label for="argumentatie" class="control-label">Argumentatie:</label>
                <textarea id="argumentatie" class="form-control" readonly="">@aanvraag.Argumentatie</textarea>
                <label for="status" class="control-label">Status:</label>
                <textarea id="status" class="form-control" readonly="">@Enum.GetName(typeof(Status), @aanvraag.Status)</textarea>
                <label class="control-label">Bewijzen: <a href="#" class="vorigBewijs"><<</a><span class="huidigBewijs">1</span>/@aanvraag.Bewijzen.Count()<a href="#" class="volgendBewijs">>></a></label>
                @foreach (var bewijs in aanvraag.Bewijzen)
                {
                    <div data-bewijsid="@bewijs.BewijsId" class="inheritWidth bewijs hide">
                        <div class="inheritWidth bewijspointer" data-aanvraagid="aanvraag_@aanvraag.AanvraagId">
                            <textarea id="argumentatie" class="form-control" readonly="">@bewijs.Omschrijving</textarea>
                            <a href="~/bewijzen/@bewijs.StudentEmail.Split(new Char[] {'@'}).First()/@bewijs.Path" download>
                                Als onderstaande voorstelling niet werkt kunt u op deze link klikken om het bewijs te downloaden
                            </a>
                            <div class="bewijsdiv">
                                @if (@bewijs.Path.Split(new Char[] { '.' }).Last().Equals("pdf"))
                                {
                                    <embed src="~/bewijzen/@bewijs.StudentEmail.Split(new Char[] {'@'}).First()/@bewijs.Path" class="inheritWidth" />
                                }
                                else
                                {
                                    <img src="~/bewijzen/@bewijs.StudentEmail.Split(new Char[] {'@'}).First()/@bewijs.Path" class="inheritWidth" />
                                }
                            </div>

                        </div>

                    </div>
                                { getoondeAanvraagId++; }
                }
            </div>
        }
    </div>
</div>
