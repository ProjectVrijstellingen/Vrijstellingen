@model IEnumerable<VTP2015.Modules.Counselor.ViewModels.FileOverviewViewModel>

<div>
    <div class="row">
        <div class="form-group col-md-3">
            <input type="text" class="form-control" id="searchQuery" placeholder="Zoek op naam">
        </div>
        <div class="form-group col-md-2">
            <div class="btn-group" data-toggle="buttons">
                <label id="rbBlok" class="btn btn-default active" onclick="onBlok()">
                    <input type="radio" id="rBlok" value="Blok"/> <span class="glyphicon glyphicon-th"></span>
                </label>
                <label id="rbList" class="btn btn-default" onclick="onList()">
                    <input type="radio" id="rLijst" value="Lijst"/> <span class="glyphicon glyphicon-list"></span>
                </label>
            </div>
        </div>
        <div class="form-group col-md-4">
            <div class="btn-group" data-toggle="buttons">
                <span class="button-checkbox">
                    <button id="btnGreen" type="button" class="btn" data-color="success" onclick="toggleGreen()">Afgewerkt</button>
                    <input id="chGreen" type="checkbox" class="hidden"/>
                </span>
                <span class="button-checkbox">
                    <button id="btnOrange" type="button" class="btn" data-color="warning" onclick="toggleOrange()">Bezig</button>
                    <input id="chOrange" type="checkbox" class="hidden" checked/>
                </span>
                <span class="button-checkbox">
                    <button id="btnRed" type="button" class="btn" data-color="danger" onclick="toggleRed()">Nieuw</button>
                    <input id="chRed" type="checkbox" class="hidden" checked/>
                </span>
            </div>
        </div>
        @Html.Action("EducationSelectWidget")
    </div>
    <div class="container">
        <div class="row">
            <div id="lijst" class="hidden">
                <table class="table">
                    <thead>
                    <tr>
                        <th>Voornaam</th>
                        <th>Familienaam</th>
                        <th>Progress</th>
                        <th>Acties</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var dossier in Model.OrderBy(m => m.PercentageOfRequestsOpen))
                    {
                        var percentage = dossier.PercentageOfRequestsOpen;

                        var kleur = "warning";
                        if (percentage == 100) { kleur = "danger"; }
                        else if (percentage == 0) { kleur = "success"; }

                        percentage = 100 - percentage;

                        <tr class="@kleur">
                            <td>@dossier.StudentFirstName</td>
                            <td>@dossier.StudentName</td>
                            <td>
                                <div class="progress">
                                    <div class="progress-bar progress-bar-striped active" role="progressbar"
                                         aria-valuenow="@percentage" aria-valuemin="0" aria-valuemax="100" style="width:@percentage%">
                                    </div>
                                </div>
                            </td>
                            <td>
                                <a href="#" id="links-list">
                                    <span class="glyphicon glyphicon-list-alt dossierpointer" data-dossierid="@dossier.Id" aria-hidden="true"></span>
                                </a>
                                <a href="#" id="midden-list">
                                    <span class="glyphicon glyphicon-print" aria-hidden="true"></span>
                                </a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
            <div id="blok">
                @foreach (var dossier in Model.OrderBy(m => m.PercentageOfRequestsOpen))
                {
                    <div class="col-md-2 dossier" data-name="@dossier.StudentName" data-prename="@dossier.StudentFirstName">
                        @{
                            var percentage = dossier.PercentageOfRequestsOpen;

                            var kleur = "oranje";
                            if (percentage == 100 ) { kleur = "rood"; }
                            else if (percentage == 0) { kleur = "groen"; }
                        }
                        <div class="panel panel-text panel-@kleur panel-default clearfix panel-body">
                            <p class="naam">@dossier.StudentFirstName @dossier.StudentName</p>
                            <div id="kader">
                                <a href="#" id="links">
                                    <span class="glyphicon glyphicon-list-alt white dossierpointer" data-dossierid="@dossier.Id" aria-hidden="true"></span>
                                </a>
                                <span class="white percentage" id="middem">@dossier.AmountOfRequestsOpen</span>
                                <a href="#" id="rechts">
                                    @*<span class="glyphicon glyphicon-print white" aria-hidden="true"></span>*@
                                    <div class="chart" data-percent="66"><span>14</span></div>
                                </a>
                                <span class="hide academiejaar">@dossier.AcademicYear</span>
                                <span class="hide afstudeerrichting">@dossier.Route</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>




