@using VTP2015.Entities
@model IEnumerable<VTP2015.Modules.Counselor.ViewModels.RequestDetailViewModel>
<div class="col-md-4">
    
    @foreach (var request in Model)
    {
        
    }

</div>

<div>

</div>

<div class="row">
    <div class="form-group col-md-3">
        <input type="text" class="form-control" id="partimNameSearchQuery" placeholder="Zoek op partim">
    </div>
    <div class="form-group col-md-2">
        <div class="btn-group" data-toggle="buttons">
            <label id="rbDetailBlok" class="btn btn-default active">
                <input type="radio" id="rBlok" value="Blok" /> <span class="glyphicon glyphicon-th"></span>
            </label>
            <label id="rbDetailList" class="btn btn-default">
                <input type="radio" id="rLijst" value="Lijst" /> <span class="glyphicon glyphicon-list"></span>
            </label>
        </div>
    </div>

    <div class="form-group col-md-7">
        <div class="btn-group" data-toggle="buttons">
            <span class="button-checkbox">
                <button id="btnApprovedRequests" type="button" class="btn" data-color="success">Goedgekeurd<span id="spnAmountOfApprovedRequests" class="badge badge-success" style="margin-left: 1em">0</span></button>
                <input id="chApprovedRequests" type="checkbox" class="hidden" checked />
            </span>
            <span class="button-checkbox">
                <button id="btnDeniedRequests" type="button" class="btn" data-color="danger">Afgekeurd<span id="spnAmountOfDeniedRequests" class="badge badge-danger" style="margin-left: 1em">0</span></button>
                <input id="chDeniedRequests" type="checkbox" class="hidden" checked />
            </span>
            <span class="button-checkbox">
                <button id="btnUntreatedRequests" type="button" class="btn" data-color="warning">Onbeslist<span id="spnAmountOfUntreatedRequests" class="badge badge-warning" style="margin-left: 1em">0</span></button>
                <input id="chUntreatedRequests" type="checkbox" class="hidden" checked />
            </span>
        </div>
    </div>

</div>

<table class="table">
    <thead>
        <tr>
            <th >modulenaam</th>
            <th>partimnaam</th>
            <th>test</th>
            <th>test</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var request in Model)
        {
            <tr class="request hide" data-fileid="@request.FileId" data-RequestPartimInformationPartimInformationid="@request.RequestId" data-status="@request.Status.ToString()">
                <td>@request.ModuleName</td>
                <td>@request.PartimName</td>
                <td>@*<button class="btn btn-danger herinnering">Poke docent</button>*@</td>
                <td></td>
            </tr>
            <tr class="hide">
                <td>
                    <div class="requestEvidence">
                        @if (!request.Evidence.Any())
                        {
                            <p>Er zijn voor deze aanvraag geen bewijzen.</p>
                        }
                        else
                        {
                            <label class="control-label" data-requestid="@request.RequestId">
                                Evidence:
                                <a href="#" class="previousEvidence"><<</a>
                                <span class="currentEvidence">1</span>/
                                <span class="amountOfEvidence">@request.Evidence.Count()</span>
                                <a href="#" class="nextEvidence">>></a>
                            </label>
                        }

                        @{ var currentEvidenceIndex = 1; }
                        @foreach (var evidence in request.Evidence)
                        {
                            <div data-evidenceindex="@currentEvidenceIndex" class="inheritWidth bewijs hide">

                                <div class="inheritWidth bewijspointer" data-RequestPartimInformationPartimInformationid="RequestPartimInformationPartimInformation_ //TODO: right value">

                                    <p id="argumentatie" readonly="">@evidence.Description</p>

                                    <a href="~/bewijzen/@evidence.StudentEmail.Split('@').First()/@evidence.Path" download>
                                        Als onderstaande voorstelling niet werkt kunt u op deze link klikken om het bewijs te downloaden
                                    </a>

                                    <div class="bewijsdiv">
                                        @if (evidence.Path.Split('.').Last().Equals("pdf"))
                                        {
                                            <embed src="~/bewijzen/@evidence.StudentEmail.Split('@').First()/@evidence.Path" class="inheritWidth" />
                                        }
                                        else
                                        {
                                            <img src="~/bewijzen/@evidence.StudentEmail.Split('@').First()/@evidence.Path" class="inheritWidth" alt="" />
                                        }
                                    </div>

                                </div>

                            </div>
                            {
                                currentEvidenceIndex++;
                            }
                        }


                    </div>

                </td>
            </tr>
            
        }
    </tbody>
</table>

