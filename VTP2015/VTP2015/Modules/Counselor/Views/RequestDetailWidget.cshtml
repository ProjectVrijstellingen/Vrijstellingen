@using VTP2015.Entities
@model IEnumerable<VTP2015.Modules.Counselor.ViewModels.RequestDetailViewModel>

<div class="panel panel-success clearfix inheritWidth">
    <div class="panel-heading ">
        <h3 class="panel-title">RequestPartimInformationPartimInformations <span id="vorigeAanvraag"><<</span><span id="huidigeAanvraag">1</span>/<span id="aantalAanvragen"></span><span id="volgendeAanvraag">>></span></h3>
    </div>
    <div class="panel-body">
        @{ var getoondeAanvraagId = 1; }
        @foreach (var request in Model)
        {
            <div id="aanvraag-@getoondeAanvraagId" class="aanvraag hide" data-dossierid="@request.FileId" data-RequestPartimInformationPartimInformationid="@request.RequestId">
                <button class="btn btn-danger herinnering">Poke docent</button>
                <p>@request.ModuleName - @request.PartimName</p>
                <label for="argumentatie" class="control-label">Argumentation:</label>
                <textarea id="argumentatie" class="form-control" readonly="">@request.Argumentation</textarea>
                <label for="status" class="control-label">StatusViewModel:</label>
                <textarea id="status" class="form-control" readonly="">@Enum.GetName(typeof(Status), request.StatusViewModel)</textarea>
                <label class="control-label">Evidence: <a href="#" class="vorigBewijs"><<</a><span class="huidigBewijs">1</span>/@request.Evidence.Count()<a href="#" class="volgendBewijs">>></a></label>
                @foreach (var evidence in request.Evidence)
                {
                    <div data-evidenceid="@evidence.EvidenceId" class="inheritWidth bewijs hide">
                        <div class="inheritWidth bewijspointer" data-RequestPartimInformationPartimInformationid="RequestPartimInformationPartimInformation_ //TODO: right value">
                            <textarea id="argumentatie" class="form-control" readonly="">@evidence.Description</textarea>
                            <a href="~/bewijzen/@evidence.StudentEmail.Split('@').First()/@evidence.Path" download>
                                Als onderstaande voorstelling niet werkt kunt u op deze link klikken om het evidence te downloaden
                            </a>
                            <div class="bewijsdiv">
                                @if (evidence.Path.Split('.').Last().Equals("pdf"))
                                {
                                    <embed src="~/bewijzen/@evidence.StudentEmail.Split('@').First()/@evidence.Path" class="inheritWidth" />
                                }
                                else
                                {
                                    <img src="~/bewijzen/@evidence.StudentEmail.Split('@').First()/@evidence.Path" class="inheritWidth" alt=""/>
                                }
                            </div>

                        </div>

                    </div>
                                { getoondeAanvraagId++; }
                }
            </div>
        }
    </div>
</div>
