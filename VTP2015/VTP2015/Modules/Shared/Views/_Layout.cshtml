@using System
@using VTP2015.Identity
@{
    var im = new IdentityManager();
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Vrijstellingen / Trajecten</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link type="text/css" href="~/Content/Stylesheet.css" rel="stylesheet"/>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</head>
<body>
@if (Request.IsAuthenticated)
{
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.RouteLink("Vrijstellingen", new { controller = "Authentication", action = "Home"}, new { area = "", @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        @* TODO: Misschien ENUM gebruiken ipv string *@
                        @if (im.HasRole(User.Identity.Name, "Student"))
                        {
                            @Html.RouteLink("Student panel", new {controller = "Student", action = "Index"})
                        }
                    </li>
                    <li>
                        @if (im.HasRole(User.Identity.Name, "Lecturer"))
                        {
                            @Html.RouteLink("Lecturer panel", new { controller = "Lecturer", action = "Index" })
                        }
                    </li>
                    <li>
                        @if (im.HasRole(User.Identity.Name, "Counselor"))
                        {
                            @Html.RouteLink("Traject begeleider panel", new { controller = "Counselor", action = "Index" })
                        }
                    </li>
                    <li>                        
                        @if (im.HasRole(User.Identity.Name, "Admin"))
                        {
                            @Html.RouteLink("Admin panel", new { controller = "Admin", action = "Index" })
                        }
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
}
    <div class="container body-content">
        @RenderBody()

        @if (Request.IsAuthenticated) {
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Vrijstellingen / Trajecten tool Howest</p>
                <p>By Joachim, Sam, Tiem, Toon & Dries</p>
            </footer>
        }
    </div>
    @RenderSection("scripts", required: false)
    @RenderSection("css", required: false)
</body>
</html>
