@model IEnumerable<VTP2015.Modules.Lecturer.ViewModels.RequestListViewModel>
<div class="panel panel-default clearfix inheritWidth approvedaanvraagcontainer">
    <div class="panel-heading ">
        <h3 class="panel-title">Aanvaarde aanvragen</h3>
    </div>
    <div class="panel-body">
        @{ var getoondeAanvraagId = 1; }

        @foreach (var aanvraag in Model)
        {
            <div class="panel clearfix inheritWidth">
                <div id="approvedaanvraag-@getoondeAanvraagId" class="aanvraag " data-studentid="@aanvraag.Student.Email" data-aanvraagid="@aanvraag.Id" data-module="@aanvraag.ModuleName">
                    <p>@aanvraag.ModuleName - @aanvraag.PartimName</p>
                    <p>Student: @aanvraag.Student.Email</p>
                    <p>
                        <label for="argumentatie" class="control-label">Argumentatie:</label>
                        @*<textarea id="argumentatie" class="form-control" readonly="">@aanvraag.Argumentation</textarea>*@
                        <label class="control-label">@aanvraag.Argumentation</label>
                    </p>
                    <label class="control-label">Bewijzen: <a href="#" class="vorigBewijs"><<</a><span class="huidigBewijs">1</span>/@aanvraag.Evidence.Count()<a href="#" class="volgendBewijs">>></a></label>
                    @foreach (var bewijs in aanvraag.Evidence)
                {
                        <div data-evidenceid="@bewijs.Id" class="inheritWidth bewijs hide">
                            <div class="inheritWidth bewijspointer" data-RequestPartimInformationid="RequestPartimInformation_@aanvraag.Id">
                                <textarea id="argumentatie" class="form-control" readonly="">@bewijs.Description</textarea>
                                <a href="~/bewijzen/@bewijs.Student.Email.Split(new Char[] {'@'}).First()/@bewijs.Path" download>
                                    Als onderstaande voorstelling niet werkt kunt u op deze link klikken om het evidence te downloaden
                                </a>
                                <div class="bewijsdiv">
                                    @if (@bewijs.Path.Split(new Char[] { '.' }).Last().Equals("pdf"))
                                    {
                                        <embed src="~/bewijzen/@bewijs.Student.Email.Split(new Char[] {'@'}).First()/@bewijs.Path" class="inheritWidth" />
                                    }
                                    else
                                    {
                                        <img src="~/bewijzen/@bewijs.Student.Email.Split(new Char[] {'@'}).First()/@bewijs.Path" class="inheritWidth" />
                                    }
                                </div>
                            </div>
                        </div>
                        { getoondeAanvraagId++; }
                    }
                </div>
                </div>
                }
            </div>
</div>