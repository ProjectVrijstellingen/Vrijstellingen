@model IEnumerable<VTP2015.Modules.Lecturer.ViewModels.RequestListViewModel>

<div class="panel panel-success clearfix inheritWidth aanvraagcontainer">
    <div class="panel-heading ">
        @*<h3 class="panel-title">Aanvragen <span id="vorigeAanvraag"><<</span><span id="huidigeAanvraag">1</span>/<span id="aantalAanvragen"></span><span id="volgendeAanvraag">>></span></h3>*@
        <h3 class="panel-title">Aanvragen</h3>
</div>
    <div class="panel-body">
        @{ var getoondeAanvraagId = 1; }
        
        @foreach (var partim in Model.GroupBy(g => g.PartimName).Select(grp => grp.First()))
        {
            <div class="panel panel-success clearfix inheritWidth modulecontainer @partim.PartimName.Replace(" ","")">
                <h3 class="panel-title">@partim.PartimName - @partim.ModuleName</h3>
                <div class="panel-body">

                    @foreach (var aanvraag in Model.Where(m => m.PartimName.Equals(partim.PartimName)))
                    {
                        <div id="aanvraag-@getoondeAanvraagId" class="aanvraag hide" data-studentid="@aanvraag.Evidence.FirstOrDefault().StudentEmail" data-aanvraagid="@aanvraag.RequestId" data-module="@aanvraag.ModuleName">
                            <div class="opinionButtons row">
                                <input type="button" class="btn btn-success approveButton" value="Accepteren">
                                <input type="button" class="btn btn-danger dissapproveButton" value="Weigeren">
                            </div>
                            
                            <p>Student: @aanvraag.Evidence.FirstOrDefault().StudentEmail</p>
                            <p>
                                <label for="argumentatie" class="control-label">Extra argumentatie:</label>
                                <label class="control-label">@aanvraag.Argumentation</label>
                            </p>
                            <label class="control-label">Bewijzen: <a href="#" class="vorigBewijs"><<</a><span class="huidigBewijs">1</span>/@aanvraag.Evidence.Count()<a href="#" class="volgendBewijs">>></a></label>
                            @foreach (var bewijs in aanvraag.Evidence)
                            {
                                <div data-evidenceid="@bewijs.EvidenceId" class="inheritWidth bewijs hide">
                                    <div class="inheritWidth bewijspointer" data-RequestPartimInformationid="RequestPartimInformation_@aanvraag.RequestId">
                                        <textarea id="argumentatie" class="form-control" readonly="">@bewijs.Description</textarea>
                                        <a href="~/bewijzen/@bewijs.StudentEmail.Split(new Char[] {'@'}).First()/@bewijs.Path" download>
                                            Als onderstaande voorstelling niet werkt kunt u op deze link klikken om het evidence te downloaden
                                        </a>
                                        <div class="bewijsdiv">
                                            @if (@bewijs.Path.Split(new Char[] { '.' }).Last().Equals("pdf"))
                                            {
                                                <embed src="~/bewijzen/@bewijs.StudentEmail.Split(new Char[] {'@'}).First()/@bewijs.Path" class="inheritWidth" />
                                            }
                                            else
                                            {
                                                <img src="~/bewijzen/@bewijs.StudentEmail.Split(new Char[] {'@'}).First()/@bewijs.Path" class="inheritWidth" />
                                            }
                                        </div>
                                    </div>
                                </div>
                                { getoondeAanvraagId++; }
                            }
                            <div class="opinionButtons row">
                                <input type="button" class="btn btn-success approveButton" value="Accepteren">
                                <input type="button" class="btn btn-danger dissapproveButton" value="Weigeren">
                            </div>
                        </div>
                    }




                </div>
            </div>
        }

        
    </div>
</div>